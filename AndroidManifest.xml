<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senior.bluehome"
    android:versionCode="1"
    android:versionName="1.0"
    android:screenOrientation="portrait" >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />  
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.senior.bluehome.BlueHome"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait">
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
                  <!-- android:windowSoftInputMode="adjustResize|stateVisible">
                  android:launchMode="singleInstance" -->
        </activity>
        <activity android:name="com.senior.bluehome.DeviceListActivity"
                  android:label="@string/app_name"
                  android:configChanges="orientation|keyboardHidden" 
                  android:screenOrientation="portrait"/>
        <activity android:name="TermPreferences"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.senior.bluehome.MediaPlayerActivity"
            android:launchMode="singleTask"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.senior.bluehome.PlayListActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
