<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <com.senior.bluehome.EmulatorView android:id="@+id/emulatorView"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      />
    
    <TextView
        android:id="@+id/text_living_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/living_room" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/kitchen" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_master_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/master_bedroom" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_bedroom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/bedroom1" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_bedroom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="180dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/bedroom2" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="220dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/temperature" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
 
    <ToggleButton
        android:id="@+id/toggle_living_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:checked="true" />
    <ToggleButton
        android:id="@+id/toggle_kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:checked="true" />
    <ToggleButton
        android:id="@+id/toggle_master_bedroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="90dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:checked="true" />
    <ToggleButton
        android:id="@+id/toggle_bedroom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="130dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:checked="true" />
    <ToggleButton
        android:id="@+id/toggle_bedroom2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="170dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:checked="true" />
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="220dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <ImageButton
        android:id="@+id/btnSpeak"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="280dp"
        android:paddingBottom="1000dp"
        android:paddingTop="1000dp"
        android:background="@layout/round_shape"
        android:src="@drawable/mic" 
        android:contentDescription="@string/mic"/>
    
    <TextView
        android:id="@+id/debugMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="260dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/btn_display" />
    
    

</RelativeLayout>