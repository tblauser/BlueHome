<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bluehome"
    tools:context=".MainActivity" >
    
    <com.senior.bluehome.EmulatorView 
        android:id="@+id/emulatorView"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:text="@string/temperature" 
        android:textAppearance="?android:attr/textAppearanceMedium" />	
    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    
    <TextView
        android:id="@+id/bluetoothStatus"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_width = "150dip"
        android:gravity = "center"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="420dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:textOn="@string/toggle_on"
        android:textOff="@string/toggle_off"
        android:padding="5dp"
        android:background="@layout/round_text_shape"
        android:textColor="@android:color/white" />
    
    <ImageButton android:id="@+id/lights_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:layout_marginLeft="130dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/light_icon" />
    <ImageButton android:id="@+id/fans_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dip"
        android:layout_marginLeft="25dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/fan_icon" />
    <ImageButton android:id="@+id/tv_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dip"
        android:layout_marginLeft="25dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/tv_icon" />
    <ImageButton android:id="@+id/thermostat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dip"
        android:layout_marginLeft="225dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/thermostat_icon" />
    <ImageButton android:id="@+id/btnSpeak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginTop="350dip"
        android:layout_marginLeft="130dip"       
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/mic_icon" />
    <ImageButton android:id="@+id/lock_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dip"
        android:layout_marginLeft="225dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"       
        android:src="@drawable/lock_icon" />
   	<ImageButton android:id="@+id/bluetooth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dip"
        android:layout_marginLeft="120dip"        
        android:padding="5dip" 
        android:background="@layout/round_shape"    
        android:src="@drawable/bluetooth_icon" />
    
    

</RelativeLayout>